<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="8"
        >
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:elevation="4dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="4dp"
            android:layout_weight="1">
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp" >

             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A team"
                style="@style/teamname"
                android:textAlignment="center"
                android:layout_weight="1"
                android:id="@+id/teamaname"
                />

             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                style="@style/teamscore"
                android:textAlignment="center"
                android:layout_weight="2"
                android:id="@+id/team_a_score"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="+3 Points"
                style="@style/mybutton"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="add3pointsInA"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="+2 Points"
                style="@style/mybutton"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="add2pointsInA"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="+1 Points"
                style="@style/mybutton"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="add1pointsInA"
                />

    </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:elevation="4dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="4dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A team"
                    style="@style/teamname"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:id="@+id/teambname"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    style="@style/teamscore"
                    android:textAlignment="center"
                    android:layout_weight="2"
                    android:id="@+id/team_b_score"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="+3 Points"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="add3pointsInB"
                    style="@style/mybutton"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="+2 Points"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="add2pointsInB"
                    style="@style/mybutton"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="+1 Points"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="add1pointsInB"
                    style="@style/mybutton"

                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="RESET SCORES"
            android:onClick="resetscore"
            android:layout_weight="2"
            style="@style/mybutton"
            />

    </LinearLayout>
</ScrollView>